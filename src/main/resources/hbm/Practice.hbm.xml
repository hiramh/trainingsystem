<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!--
  - Mapping file for the Hibernate implementation of the Clinic interface.
	-->
<hibernate-mapping package="com.synnex.model">

	<class name="Practice">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="score"/>
		<property name="status"/>
		<property name="content"/>
		<property name="attachment"/>
		<!-- 多对一 -->
		<many-to-one name="user" column="user_id" cascade="save-update">
		</many-to-one>
		<many-to-one name="course" column="course_id" cascade="save-update">
		</many-to-one>
		
	</class>

</hibernate-mapping>
