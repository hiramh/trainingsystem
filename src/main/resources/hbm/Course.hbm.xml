<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!--
  - Mapping file for the Hibernate implementation of the Clinic interface.
	-->
<hibernate-mapping package="com.synnex.model">

	<class name="Course">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="starttime" type="timestamp"/>
		<property name="endtime" type="timestamp"/>
		<property name="name"/>
		<property name="content"/>
		<property name="goal"/>
		<property name="practise" type="text"/>
		<!-- 多对一 -->
		<many-to-one name="dictionary" column="category_id" cascade="save-update">
		</many-to-one>
		<!-- 多对多 -->
		<set name="user" cascade="save-update" table="user_course">
			<key column="course_id"></key>
			<many-to-many class="Course" column="user_id"/>
		</set>
	</class>

</hibernate-mapping>
